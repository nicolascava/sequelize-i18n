{
  "name": "sequelize-i18n",
  "version": "2.1.0",
  "private": true,
  "description": "Easy internalization using Sequelize",
  "scripts": {
    "lint": "eslint ./ --config ./package.json --ignore-path ./.eslintignore",
    "test": "mocha ./test/*.js  --require ./lib/requireBabelRegister.js"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "braces": "^3.0.2",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "lodash": "^4.12.0",
    "mysql": "^2.10.2",
    "sequelize": "^5.15.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^6.1.4",
    "sqlite3": "^4.0.8"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "max-len": [
        2,
        100,
        4,
        {
          "ignorePattern": "\\s*<"
        }
      ]
    },
    "globals": {
      "document": true,
      "window": true,
      "navigator": true,
      "URL": true,
      "fetch": true,
      "it": true,
      "describe": true,
      "beforeEach": true
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": true,
          "regenerator": true
        }
      ]
    ]
  }
}
